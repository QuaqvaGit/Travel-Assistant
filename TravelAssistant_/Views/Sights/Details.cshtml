@model TravelAssistant_.Models.SightViewModel

<div class="modal fade" id="details-sight" tabindex="-1" role="dialog" aria-labelledby="deleteLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            
            <div class="modal-header">
                <h5 class="modal-title" id="Title">@ViewBag.PageName</h5>
            </div>
            <div class="modal-body">
                <hr />
                <form asp-action="Details">
                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CityDesc)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CityDesc)</dd>
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.OpenFrom)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.OpenFrom)</dd>
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.OpenTill)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.OpenTill)</dd>
                    </dl>
                </form>
            </div>
            <div class="modal-footer">
                <div class="input-row">
                    <button type="button" class="btn btn-primary btn-endrow"
                            data-toggle="ajax-modal" data-target="#add-sight" 
                            data-url="@Url.Action("AddOrEdit",new {@id = Model.Id})">Редактировать</button>
                    <button class="btn btn-danger" data-bs-dismiss="modal">Закрыть</button>
                </div>
            </div>
            
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}