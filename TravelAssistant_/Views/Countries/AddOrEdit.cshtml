@model TravelAssistant_.Models.Country

<div class="modal fade" id="add-country" tabindex="-1" role="dialog" aria-labelledby="EditLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="Title">@ViewBag.PageName</h5>
            </div>
            <div class="modal-body">
                <hr />
                @{
                    var actionName = ViewBag.PageName == "Добавление страны" ? "Add" : "Edit";
                }
                <form asp-action=@actionName>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()"/>

                    <div class="input-row">
                        @Html.LabelFor(model => model.iso_ID)
                        @Html.TextBoxFor(model => model.iso_ID, new {@class = "input-field"})
                        @Html.ValidationMessageFor(model => model.iso_ID)
                    </div>
                    

                    <div class="input-row">
                        @Html.LabelFor(model => model.Name)
                        @Html.TextBoxFor(model => model.Name, new {@class = "input-field"})
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div class="input-row">
                    <button class="btn btn-success btn-endrow" data-save="modal">Сохранить</button>
                    <button class="btn btn-danger" data-bs-dismiss="modal">Закрыть</button>
                </div>
            </div>
        </div>
    </div>
</div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }