@model TravelAssistant_.Models.Way

<div class="modal fade" id="details-way" tabindex="-1" role="dialog" aria-labelledby="deleteLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            
            <div class="modal-header">
                <h5 class="modal-title" id="Title">@ViewBag.PageName</h5>
            </div>
            <div class="modal-body">
                <hr />
                <form asp-action="Details">
                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.way)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.way)</dd>
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Length)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Length)</dd>
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Price)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Time)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Time)</dd>
                        @if (Model.ValidFrom!=null)
                        {
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ValidFrom)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.ValidFrom)</dd>
                        }
                        @if (Model.ValidTill!=null)
                        {
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ValidTill)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.ValidTill)</dd>
                        }
                    </dl>
                </form>
            </div>
            <div class="modal-footer">
                <div class="input-row">
                    <button type="button" class="btn btn-primary btn-endrow"
                            data-toggle="ajax-modal" data-target="#add-way" 
                            data-url="@Url.Action("AddOrEdit",new {@id = Model.Id})">Редактировать</button>
                    <button class="btn btn-danger" data-bs-dismiss="modal">Закрыть</button>
                </div>
            </div>
            
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}